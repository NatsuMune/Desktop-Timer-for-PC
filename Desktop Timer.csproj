<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>LeetCodeTimer</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <PublishSingleFile>true</PublishSingleFile>
    <AssemblyName>LeetCodeTimer</AssemblyName>
    <ApplicationIcon>desktop_timer.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="desktop_timer.ico">
      <LogicalName>desktop_timer.ico</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

</Project>